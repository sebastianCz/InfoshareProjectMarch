@model OstreCWEB.ViewModel.StoryBuilder.StoryParagraphsView

@{
    ViewData["Title"] = $"Story " + @Model.Name;
}

<div class="pagetitle">
    <h1>@Model.Name</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-area="" asp-controller="StoryBuilder" asp-action="Index">StoryBuilder</a></li>
            <li class="breadcrumb-item active">Story details</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Description:</h5>
        @Model.Description<br />
        Amount of Paragraphs: @Model.AmountOfParagraphs
    </div>
    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
        <a asp-action="EditStory" asp-route-id="@Model.Id" type="button" class="btn btn-warning">Edit</a>      
        @if (Model.AmountOfParagraphs != 0)
        {
            <a asp-route-name="StoryBuilder" asp-action="ParagraphDetails" asp-route-id="@Model.Id" asp-route-paragraphId="@Model.FirstParagraphId" type="button" class="btn btn-primary">Show Details</a>
        }
        <a asp-action="DeleteStory" asp-route-id="@Model.Id" type="button" class="btn btn-danger">Delete</a>
        <a asp-action="Index" type="button" class="btn btn-success">Back to List</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Paragraphs</h5>
        <a asp-action="CreatNewParagraph" asp-route-id="@Model.Id" type="button" class="btn btn-success">Create new Paragraph</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Type
                    <th>
                        <label asp-for="Paragraphs.First().StageDescription"></label>
                    </th>
                    <th>
                        Choices
                    </th>
                    <th>____Action____</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Paragraphs)
                {
                    @if (item.ParagraphType == OstreCWEB.Data.Repository.StoryModels.Enums.ParagraphType.DescOfStage)
                    {
                        <tr>
                            <td>
                                @item.ParagraphType
                            </td>
                            <td>
                                @item.StageDescription
                            </td>
                            <td>
                                @item.AmountOfChoices
                            </td>
                            <td>
                                <a asp-route-name="StoryBuilder" asp-action="ParagraphDetails" asp-route-id="@Model.Id" asp-route-paragraphId="@item.Id" type="button" class="btn btn-success">Show Details</a>
                            </td>
                        </tr>
                    }
                    @if (item.ParagraphType == OstreCWEB.Data.Repository.StoryModels.Enums.ParagraphType.Fight)
                    {
                        <tr class="table-danger">
                            <td>
                                @item.ParagraphType
                            </td>
                            <td>
                                @item.StageDescription
                            </td>
                            <td>
                                @item.AmountOfChoices
                            </td>
                            <td>
                                <a asp-route-name="StoryBuilder" asp-action="ParagraphDetails" asp-route-id="@Model.Id" asp-route-paragraphId="@item.Id" type="button" class="btn btn-success">Show Details</a>
                            </td>
                        </tr>
                    }
                    @if (item.ParagraphType == OstreCWEB.Data.Repository.StoryModels.Enums.ParagraphType.Test)
                    {
                        <tr class="table-warning">
                            <td>
                                @item.ParagraphType
                            </td>
                            <td>
                                @item.StageDescription
                            </td>
                            <td>
                                @item.AmountOfChoices
                            </td>
                            <td>
                                <a asp-route-name="StoryBuilder" asp-action="ParagraphDetails" asp-route-id="@Model.Id" asp-route-paragraphId="@item.Id" type="button" class="btn btn-success">Show Details</a>
                            </td>
                        </tr>
                    }
                    @*@if (item.ParagraphType == OstreCWEB.Data.Repository.StoryModels.Enums.ParagraphType.Dialog)
                    {
                        <tr class="table-Primary">
                            <td>
                                @item.ParagraphType
                            </td>
                            <td>
                                @item.StageDescription
                            </td>
                            <td>
                                @item.AmountOfChoices
                            </td>
                            <td>
                                <a asp-route-name="StoryBuilder" asp-action="ParagraphDetails" asp-route-id="@Model.Id" asp-route-paragraphId="@item.Id" type="button" class="btn btn-success">Show Details</a>
                            </td>
                        </tr>
                    }*@
                    @*@if (item.ParagraphType == OstreCWEB.Data.Repository.StoryModels.Enums.ParagraphType.Shopkeeper)
                    {
                        <tr class="table-success">
                            <td>
                                @item.ParagraphType
                            </td>
                            <td>
                                @item.StageDescription
                            </td>
                            <td>
                                @item.AmountOfChoices
                            </td>
                            <td>
                                <a asp-route-name="StoryBuilder" asp-action="ParagraphDetails" asp-route-id="@Model.Id" asp-route-paragraphId="@item.Id" type="button" class="btn btn-success">Show Details</a>
                            </td>
                        </tr>
                    }*@
                }                       
            </tbody>
        </table>
        <a asp-action="CreatNewParagraph" asp-route-id="@Model.Id" type="button" class="btn btn-success">Create new Paragraph</a>
    </div>
</div>
