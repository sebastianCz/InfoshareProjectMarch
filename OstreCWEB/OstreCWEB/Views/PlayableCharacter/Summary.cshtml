@model OstreCWEB.ViewModel.Characters.PlayableCharacterCreateView
@{
    ViewData["Title"] = "Summary";
}

<div class="accordion" id="accordionExample" hidden="true">
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingOne">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
        Statistics
      </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
      <div class="accordion-body">
        <div>
            <p>RaceId: @ViewBag.RaceId</p>
            <p>RaceName: @ViewBag.RaceName</p>
            <p>ClassId: @ViewBag.ClassId</p>
            <p>ClassName: @ViewBag.ClassName</p>
            <p>Str: @ViewBag.Str</p>
            <p>Dex: @ViewBag.Dex</p>
            <p>Con: @ViewBag.Con</p>
            <p>Int: @ViewBag.Int</p>
            <p>Wis: @ViewBag.Wis</p>
            <p>Cha: @ViewBag.Cha</p>            
            <p>Name: @ViewBag.Name</p>
        </div>
      </div>
    </div>
  </div>
</div><!--Statistics only for test-->

<div class="row">
    <div class="col-md-12">    
        <div class="col-md-4 ">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div hidden="true">
                    <input asp-for="RaceId"/>
                    <input asp-for="PlayableClassId"/>
                    <input asp-for="Strenght"/>
                    <input asp-for="Dexterity"/>
                    <input asp-for="Constitution"/>
                    <input asp-for="Intelligence"/>
                    <input asp-for="Wisdom"/>
                    <input asp-for="Charisma"/>
                    <input asp-for="CharacterName"/>
                </div><!--Attributes pass-->

                <div class="p-3 bg-opacity-75 border border-warning-subtle rounded-top" style="background: radial-gradient(circle at -4% -12.9%, rgb(90, 98, 110) 0.3%, rgb(33, 31, 33) 90.2%);
                    color:goldenrod; text-align:center">
                    <h2>Summary</h2>
                </div>
                <div class="container">
                  <div class="row p-3 bg-light bg-opacity-75 border border-warning-subtle rounded">
                        <div>
                            <p style="margin-bottom: 0px">Name:</p><input type="text" value="@Model.CharacterName" readonly/>
                        </div>
                        <div>
                            <p style="margin-bottom: 0px">Race:</p><input type="text" value="@ViewBag.RaceName" readonly/>
                        </div>
                        <div >
                            <p style="margin-bottom: 0px">Class:</p><input type="text" value="@ViewBag.ClassName" readonly/>
                        </div>
                        <div >
                            <p style="margin-bottom: 0px">HP:</p><input type="text" value="@ViewBag.Health" readonly/>
                        </div>
                        <hr style="margin-top: 20px"/>
                        <div class="col-6">
                            <span>Strength:</span><input type="text" value="@ViewBag.Str" readonly/><span class="dnd-mod"></span>@if (@ViewBag.ModStr > 0){<span class="dnd-mod">+</span><span class="dnd-mod">@ViewBag.ModStr</span><span class="dnd-mod"></span>}else{ <span class="dnd-modMinus">@ViewBag.ModStr</span>}
                        </div>
                        <div class="col-6">
                            <span>Dexterity:</span><input type="text" value="@ViewBag.Dex" readonly/><span class="dnd-mod"></span>@if (@ViewBag.ModDex > 0){<span class="dnd-mod">+</span><span class="dnd-mod">@ViewBag.ModDex</span><span class="dnd-mod"></span>}else{ <span class="dnd-modMinus">@ViewBag.ModDex</span>}
                        </div>
                        <div class="col-6">
                            <span>Constitution:</span><input type="text" value="@ViewBag.Con" readonly/><span class="dnd-mod"></span>@if (@ViewBag.ModCon > 0){<span class="dnd-mod">+</span><span class="dnd-mod">@ViewBag.ModCon</span><span class="dnd-mod"></span>}else{ <span class="dnd-modMinus">@ViewBag.ModCon</span>}
                        </div>
                        <div class="col-6">
                            <span>Intelligence:</span><input type="text" value="@ViewBag.Int" readonly/><span class="dnd-mod"></span>@if (@ViewBag.ModInt > 0){<span class="dnd-mod">+</span><span class="dnd-mod">@ViewBag.ModInt</span><span class="dnd-mod"></span>}else{ <span class="dnd-modMinus">@ViewBag.ModInt</span>}
                        </div>
                        <div class="col-6">
                            <span>Wisdom:</span><input type="text" value="@ViewBag.Wis" readonly/><span class="dnd-mod"></span>@if (@ViewBag.ModWis > 0){<span class="dnd-mod">+</span><span class="dnd-mod">@ViewBag.ModWis</span><span class="dnd-mod"></span>}else{ <span class="dnd-modMinus">@ViewBag.ModWis</span>}
                        </div>
                        <div class="col-6">
                            <span>Charisma:</span><input type="text" value="@ViewBag.Cha" readonly/><span class="dnd-mod"></span>@if (@ViewBag.ModCha > 0){<span class="dnd-mod">+</span><span class="dnd-mod">@ViewBag.ModCha</span><span class="dnd-mod"></span>}else{ <span class="dnd-modMinus">@ViewBag.ModCha</span>}
                        </div>
                  </div>
                </div>
                <br />
                    <div class="form-group">
                        <input type="submit" value="Set Name" class="btn" asp-action="SetName" asp-controller="PlayableCharacter"
                        style="background: radial-gradient(circle at -4% -12.9%, rgb(90, 98, 110) 0.3%, rgb(33, 31, 33) 90.2%);color:goldenrod; text-align:center"/>  
                        <input type="submit" value="Create" class="btn" asp-action="Create" asp-controller="PlayableCharacter"
                        style="background: radial-gradient(circle at -4% -12.9%, rgb(90, 98, 110) 0.3%, rgb(33, 31, 33) 90.2%);color:goldenrod; text-align:center"/>                    
                    </div>                
            </form>
        </div>
    </div>
</div><!--Form Set Class-->

<style>
.dnd-mod{
    color:darkgreen;
}
.dnd-modMinus{
    color:darkred;
}
</style>